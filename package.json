{
  "name": "@meshconnect/react-native-sdk",
  "version": "2.1.5",
  "description": "Mesh Connect React Native SDK",
  "private": true,
  "type": "module",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**"
    ]
  },
  "devDependencies": {
    "lerna": "^6.1.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "clean": "lerna run clean && rm -rf node_modules",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "postinstall": "cd packages/link && yarn sync:version",
    "publish:npm": "lerna run publish:npm",
    "test": "lerna run test",
    "test:cov": "lerna run test:cov",
    "types:check": "lerna run types:check",
    "verify:build": "lerna run verify:build"
  }
}